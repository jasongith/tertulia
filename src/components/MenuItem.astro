---
export interface Props {
  nombre: string;
  descripcion: string;
  precio: string;
}

const { nombre, descripcion, precio } = Astro.props;
---

<div
  class="bg-white/80 backdrop-blur-sm rounded-xl p-4 shadow-sm border border-amber-100 hover:shadow-md transition-all duration-300 hover:scale-[1.02] group"
>
  <div class="flex justify-between items-start gap-4">
    <div class="flex-1">
      <h3
        class="font-semibold text-amber-900 text-lg group-hover:text-amber-800 transition-colors"
      >
        {nombre}
      </h3>
      <p class="text-amber-700 text-sm mt-1 leading-relaxed opacity-90">
        {descripcion}
      </p>
    </div>
    <div class="flex-shrink-0">
      <span
        class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm font-medium"
      >
        {precio}
      </span>
    </div>
  </div>
</div>
