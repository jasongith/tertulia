---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Carta de bebidas y cafés de La Tertulia - Escanea el QR para ver nuestro menú actualizado"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#d97706" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <title>{title}</title>

    <!-- Performance optimizations -->
    <meta name="robots" content="index, follow" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="La Tertulia" />
  </head>
  <body
    class="bg-gradient-to-br from-amber-50 via-orange-50 to-red-50 min-h-screen"
  >
    <!-- Header -->
    <header
      class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-amber-200 shadow-sm"
    >
      <div class="max-w-4xl mx-auto px-4 py-4">
        <h1
          class="text-2xl md:text-3xl font-bold text-amber-900 text-center tracking-wide"
        >
          ☕ La Tertulia
        </h1>
        <p class="text-amber-700 text-center text-sm mt-1 opacity-80">
          Carta de bebidas y cafés
        </p>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 py-6">
      <slot />
    </main>

    <!-- Import global styles -->
    <style>
      @import "../styles/global.css";

      body {
        font-family:
          "Inter",
          system-ui,
          -apple-system,
          sans-serif;
      }

      /* Smooth scroll behavior */
      html {
        scroll-behavior: smooth;
      }

      /* Custom scrollbar for webkit browsers */
      ::-webkit-scrollbar {
        width: 6px;
      }

      ::-webkit-scrollbar-track {
        background: #fef3c7;
      }

      ::-webkit-scrollbar-thumb {
        background: #d97706;
        border-radius: 3px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #b45309;
      }
    </style>
  </body>
</html>
